	<!-- Replicate Plasteel -->
	<RecipeDef ParentName="MakeFromOmniGelMK3Recipe">
		<defName>Replicate_MK3_PlasteelFromOmniGel</defName>
		<label>Replicate Plasteel from Omni-Gel</label>
		<description>Replicates Plasteel from Omni-Gel.</description>
		<jobString>Creating Plasteel from Omni-Gel.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>OmniGel</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<Plasteel>20</Plasteel>
		</products>	
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>Chemfuel</li>
				<li>OmniGel</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

